<% if @comment.errors.any? %>
	
	<h3><%= pluralize(@comment.errors.count, "error" ) %> Comment could not be saved: </h3>

	<ul>
		<% @comment.errors.full_messages.each do |msg| %>
			<li> <%= msg %> </li>
		<% end %>
	</ul>

<% end %>


<%= form_for([@post, @comment]) do |f| %>

	<%= f.label :username %>
	<br>
	<%= f.text_field :username %>
	<br>
	<%= f.label :body %>
	<br>
	<%= f.text_area :body %>

	<%= f.submit %>

<% end %>